/* pages/topFilm/topFilm.wxss */
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    text-align: center;
}
.movieSlider{
  background-color: #ff7600;
}
.weui-navbar__item.weui-bar__item_on {
color:#ff7600;

}

page {
  font-family: "Microsoft YaHei";
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.top-navbar{
  background-color: #fff;
}
.movie-text{
  display: flex;
  height: 30rpx;
  width: 92%;
  padding: 10rpx 4%;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0;
  border-left: 2px solid #ff7600;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  font-weight: bold;
  font-size: 14px;
}
.more{
  font-size: 12px;
  color: #ff7600;
  font-weight: normal;
}
.page-body{
	display: flex;
	flex:1;
	flex-direction:column;
}
.item{
	display: flex;
	padding: 20rpx 40rpx;
	border-bottom: 2rpx solid #eee;
}
.item .poster{
	width: 128rpx;
	height: 128rpx;
	margin-right: 20rpx;
}
.item .meta{
  flex: 1;
}
.item .title,.item .directors,.artists{
	display: block;
	margin-bottom: 14rpx;
  text-align: left;
}
.item .title{
	font-size: 32rpx;
}
.item .directors{
	font-size: 26rpx; 
	color: #c0c0c0;
}
.item .artists{
	font-size: 22rpx;
	color: #999;
}
.item .rating{
	font-size: 28rpx; 
	font-weight: bold;
	color: #ff7600;
}
