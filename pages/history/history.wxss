.null-action {
    margin: 0 auto;
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 8rpx;
    border: 1px solid #ff7600;
    color: #ff7600;
}

.null-action:active {
    background-color: #ff7600;
    color: #fff;
}
