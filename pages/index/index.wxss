/**index.wxss**/
.scroll-view_y{
  height: 100%;
  width: 100%;
}
swiper{
   width: 100%; 
}  
swiper image{
   width: 100%; 
}  
.coming,.now,.classic{
  border-bottom: 3px solid #f0f0f0;
}
.movie-text{
  display: flex;
  height: 30rpx;
  width: 92%;
  padding: 10rpx 4%;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0;
  border-left: 2px solid #ff7600;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  font-weight: bold;
  font-size: 14px;
}

.more{
  font-size: 12px;
  color: #ff7600;
  font-weight: normal;
}
.movie{
  width:100%;
  height: 300rpx;
  overflow: hidden; 
  padding: 20rpx;
  background-color: #fff;
  white-space: nowrap;
}
.scroll-view_x{
  width:auto;
  overflow: hidden;
}
.movie-item{
  height: auto;
  width: 200rpx;
  position: relative;
  padding-right: 10px;
  padding-left: 10px;
  display: inline-block;
  /* border:1px solid #ff7600; */
}
 .movie-item image{
  width: 200rpx;
  height: 250rpx;
} 
.movie-com{
  position: absolute;
  bottom: 20px;
  color:#f0f0f0;
  font-size: 10px;
  background: -webkit-linear-gradient(bottom,rgba(0,0,0,0.8),rgba(0,0,0,0.3));
  width: 200rpx; 
  display: flex;
  flex-direction: colum;
  justify-content: flex-end;
}
.movie-title{
  font-size: 12px;
  text-align: center;
}